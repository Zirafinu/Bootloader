{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "Release",
      "inherits": "default",
      "toolchainFile": "toolchains/target/toolchain_target.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "test_in_qemu",
      "inherits": "default",
      "toolchainFile": "toolchains/qemu/toolchain_qemu.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Release",
      "configurePreset": "Release"
    },
    {
      "name": "test_in_qemu",
      "configurePreset": "test_in_qemu"
    }
  ],
  "testPresets": [
    {
      "name": "Release",
      "configurePreset": "Release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test_in_qemu",
      "configurePreset": "test_in_qemu",
      "output": {
        "outputOnFailure": true
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "Release",
      "steps": [
        {
          "type": "configure",
          "name": "Release"
        },
        {
          "type": "build",
          "name": "Release"
        },
        {
          "type": "test",
          "name": "Release"
        }
      ]
    },
    {
      "name": "test_in_qemu",
      "steps": [
        {
          "type": "configure",
          "name": "test_in_qemu"
        },
        {
          "type": "build",
          "name": "test_in_qemu"
        },
        {
          "type": "test",
          "name": "test_in_qemu"
        }
      ]
    }
  ]
}
