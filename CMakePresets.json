{
    "version": 8,
    "cmakeMinimumRequired":{
        "major": 3,
        "minor":28,
        "patch": 0
    },
    "configurePresets":[
        {
            "name":"default",
            "generator":"Ninja",
            "binaryDir":"${sourceDir}/build/${presetName}"
        },
        {"name": "Release", "cacheVariables": {"CMAKE_BUILD_TYPE":"Release"}},
        {"name": "Debug", "cacheVariables": {"CMAKE_BUILD_TYPE":"Debug"}},
        {
            "name": "arm",
            "inherits": ["default", "Release"],
            "toolchainFile": "${sourceDir}/toolchain/arm_none_eabi.cmake"
        }
    ],
    "buildPresets":[
        {
            "name": "default", "configurePreset": "default"
        },
        {
            "name": "arm", "configurePreset": "arm"
        }
    ],
    "testPresets":[
        {
            "name": "default",
            "configurePreset": "default",
            "output": {"outputOnFailure": true}
        }
    ],
    "workflowPresets": [
        {
            "name": "default",
            "steps": [
                { "type": "configure", "name":"default" },
                { "type": "build", "name": "default" },
                { "type": "test", "name" : "default" }
            ]
        },
        {
            "name": "arm",
            "steps": [
                { "type": "configure", "name":"arm"},
                { "type": "build", "name":"arm"}
            ]
        }
    ]
}
