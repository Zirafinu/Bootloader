{
    "version": 8,
    "cmakeMinimumRequired":{
        "major": 3,
        "minor":28,
        "patch": 0
    },
    "configurePresets":[
        {
            "name":"default",
            "generator":"Ninja",
            "binaryDir":"${sourceDir}/build/${presetName}"
        },
        {"name": "Release", "inherits":["default"], "cacheVariables": {"CMAKE_BUILD_TYPE":"Release"}},
        {"name": "Debug", "inherits":["default"], "cacheVariables": {"CMAKE_BUILD_TYPE":"Debug"}}
    ],
    "buildPresets":[
        {
            "name": "Debug", "configurePreset": "Debug"
        }
    ],
    "testPresets":[
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "output": {"outputOnFailure": true}
        }
    ],
    "workflowPresets": [
        {
            "name": "Debug",
            "steps": [
                { "type": "configure", "name":"Debug" },
                { "type": "build", "name": "Debug" },
                { "type": "test", "name" : "Debug" }
            ]
        }
    ]
}
